---
import { AppComments } from '@/components';
import Layout from '../layouts/index.layout.astro'

import { cx, css } from 'styled-system/css';
import { container, grid } from 'styled-system/patterns';
---

<Layout>
	
	<main class={ 
		css({ 
			width: { 
				xsm: '100%', 
				lg: '100%' 
			},
			height: {
				xsm: '100%', 
				lg: '100%'
			},
			backgroundColor: 'hsl(223, 19%, 93%)',
		}) 
	}>

		<div id="container" class={ container() }>
			<div id="cards-box" class={ cx( css({ width: { xsm: '368px', lg: '740px' }, paddingTop: '15px' }), grid({ columns: 12, rowGap: '4' }) ) }>

				<AppComments client:load/>

			</div>
		</div>

	</main>

</Layout>
